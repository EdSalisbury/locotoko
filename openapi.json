      "items": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/item"
        }
      },
      "agent": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/uuid"
          },
          "name": {
            "type": "string"
          }
        },
        "example": {
          "id": "20944efa-2cdc-4dea-a24b-aabf2d633141",
