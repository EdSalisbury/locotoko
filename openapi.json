          "shippingAgentId": "b585bbce-7975-4cc5-a751-ff11d2e2e773",
          "quantity": 1,
          "weightPounds": 0,
          "weightOunces": 1,
          "shipWeightPounds": 0,
          "shipWeightOunces": 5,
          "sizeWidthInches": 4,
          "sizeHeightInches": 3,
          "sizeDepthInches": 1,
          "shipSizeHeightInches": 9,
          "shipSizewidthInches": 6,
          "shipSizeDepthInches": 1
