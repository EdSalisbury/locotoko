          },
          "shippingAgentId": {
            "$ref": "#/components/schemas/uuid"
          },
          "quantity": {
            "type": "integer",
            "default": 1
          },
          "weightPounds": {
            "type": "integer"
          },
          "weightOunces": {
            "type": "integer"
          },
          "shipWeightPounds": {
            "type": "integer"
          },
          "shipWeightOunces": {
            "type": "integer"
          },
          "sizeHeightInches": {
            "type": "integer"
          },
          "sizeWidthInches": {
            "type": "integer"
          },
          "sizeDepthInches": {
            "type": "integer"
          },
          "shipSizeHeightInches": {
            "type": "integer"
          },
          "shipSizeWidthInches": {
            "type": "integer"
          },
          "shipSizeDepthInches": {
            "type": "integer"
          }
        },
