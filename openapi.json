          },
          "listingAgentId": {
            "$ref": "#/components/schemas/uuid"
          },
          "shippingAgentId": {
            "$ref": "#/components/schemas/uuid"
          },
          "quantity": {
            "type": "integer",
            "default": 1
          },
          "weightPounds": {
            "type": "integer"
          },
          "weightOunces": {
            "type": "integer"
          },
          "shipWeightPounds": {
